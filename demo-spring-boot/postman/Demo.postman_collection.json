      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Alice Updated\",\"email\":\"alice@newmail.com\"}"
        },
        "url": "{{baseUrl}}/api/persons/1"
      }
